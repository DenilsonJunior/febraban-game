extends ../../templates/page/template.page-base-adaptativo.pug

block styles
	link(rel="stylesheet", href="style.css")

block body
	.body#app
		+header

		+topgame('Jogo da Memória')

		.gameBase
			p Os nossos docentes especialistas no mercado financeiro vão te ensinar tudo sobre <b>fundamentos, conceitos, regras e práticas</b> que você precisa saber para aplicar no seu dia a dia de trabalho.
			.cards
				.card(v-for="card in cards", :class="{ flipped: card.flipped, found: card.found }", @click="flipCard(card)")
					.back
					.front(:style="{ backgroundImage: 'url(' + card.image + ')' }")

			.splash(v-if="showSplash")
				.overlay
				.content
					.title You won!
					.score Score: {{ score }}
					button.newGame(@click="resetGame()") New game
		
		+footer
		
block scripts
	+scriptScripts('vue.min.js')
	+scriptScripts('lodash.min.js')
	script(src="script.js")