extends ../../templates/page/template.page-base-adaptativo.pug

block styles
	link(rel="stylesheet", href="style.css")

block body
	.body
	    
		.preloader 
			.lds-eclipse
				.spinner
				.spinner.reverse

		+header

		+image('topogame.jpg', 'imgTop')
		h2.titleRanking Ranking

		section.sec1
			p Você conquistou <b>[<span class='currentScore'>0</span> pontos]</b> ao explorar as experiências educacionais oferecidas pela Febraban Educação. Confira a sua colocação no nosso ranking!
			.ranking
				
				.boxRanking
					button.rankingScore.hide(data-modal="#pop1")
						div.datBase
							p.nome Nome 1
							p -
							p.score 100 pontos
						div.ico
								
		section.sec2
			h2 Temos muito mais para você! 
			p Continue explorando, aprendendo e se envolvendo com as iniciativas educacionais da Febraban. Acesse o nosso site febrabaneducacao.com.br para conhecer as nossas soluções de aprendizagem.
			.flex 
				.text
					h2 E, não para por aí!
					p Acesse QR Code para conhecer as nossas soluções In Company feitas especialmente para atender as necessidades e desafios da sua instituição.
				+image('qrcode.jpg', 'qr')

		+footer

		.modal#pop1
			.box
				
				.topo
					h2 pontuação
					button.modal-close
				.containerBox
					h3.nome Nome 
					.flexBox
						h4 Jogo da Memória
						p.pontos.game1 0
					.flexBox
						h4 Qual é a Certificação
						p.pontos.game2 0
					.flexBox
						h4 Caça Palavras
						p.pontos.game3 0
					.flexBox.info 
						p * A nota do ranking sempre será a maior pontuação obtida pelo jogador em todos os jogos que ele realizou.
					
				//- .flexBox
				//- 	h4 Total
				//- 	p -
				//- 	p.totalPontos

		
block scripts
	script(src="script.js")